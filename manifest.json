{
    "manifest_version": 2,

    "name": "Prism Sparkle",
    "description": "You can see this world as sparking",
    "version": "1.0",
    "icons": {
        "128": "icons/PrismSparkle128.png",
        "48": "icons/PrismSparkle48.png"
    },

    "page_action": {
        "default_icon": {
            "19": "icons/wait19.png"
        }
    },
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "permissions": [
        "tabs",
        "https://*/*",
        "http://*/*"
    ]
}
